<UserControl x:Class="University.Wpf.Components.InputElement.Input"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:University.Wpf.Components.InputElement"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    
    <UserControl.Resources>
        <ResourceDictionary Source="InputStyle.xaml"/>
    </UserControl.Resources>
    
    <StackPanel Orientation="Horizontal">
        <Label x:Name="Label"
               Style="{StaticResource StyleLabel}"/>
        <TextBox x:Name="InputT"
                 Style="{StaticResource StyleInput}"/>
    </StackPanel>
</UserControl>
