<UserControl x:Class="University.Wpf.Components.StudentCard.StudentCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:University.Wpf.Components.StudentCard"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    
    <UserControl.Resources>
        <ResourceDictionary Source="StudentCardStyle.xaml"/>
    </UserControl.Resources>
    
    <StackPanel>
        <Label x:Name="LabelId"
               Style="{StaticResource StyleLabelId}"/>
        <Label x:Name="LabelName"
               Style="{StaticResource StyleLabelName}"/>
        <Label x:Name="LabelFaculty"
               Style="{StaticResource StyleLabelFaculty}"/>
        <Button x:Name="ButtonMore"
                Content="Подробнее..."
                Click="ButtonMore_OnClick"/>
    </StackPanel>
</UserControl>
